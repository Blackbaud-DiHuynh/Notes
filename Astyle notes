Astyle notes

astyle 				// program
--style=google
--indent=tab		// or spaces
--pad-oper			// padding around operators
--pad-header		// pad spaces between if, for, while and the '('
--add-brackets		// add {} to one line if statements
--break-closing-brackets 
--break-blocks
*					// files to format

astyle --style=google --indent=tab --pad-oper --add-brackets --break-closing-brackets --lineend=linux --indent-classes --attach-classes --indent=force-tab --pad-header


